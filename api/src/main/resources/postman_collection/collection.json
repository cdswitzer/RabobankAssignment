    {
      "name": "GRANTS (Power of Attorney)",
      "item": [
        {
          "name": "Grant READ access (John Doe → Alice Cooper)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/api/v1/power-of-attorney",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"grantorName\": \"John Doe\",\n  \"granteeName\": \"Alice Cooper\",\n  \"authorization\": \"READ\",\n  \"accountNumber\": \"NL100000001\",\n  \"accountType\": \"PAYMENT\"\n}"
            }
          },
          "event": [{
            "listen": "test",
            "script": {
              "exec": [
                "pm.test(\"Status 201\", () => pm.response.to.have.status(201));",
                "const body = pm.response.json();",
                "pm.test(\"Authorization is READ\", () => pm.expect(body.authorization).to.eql(\"READ\"));"
              ]
            }
          }]
        },
        {
          "name": "Grant WRITE access (John Doe → Alice Cooper)",
          "request": {
            "method": "POST",
