  "item": [
    {
      "name": "ACCOUNTS",
      "item": [
        {
          "name": "Create Account - Payment - John Doe",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/api/v1/accounts",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"accountNumber\": \"NL100000001\",\n  \"accountHolderName\": \"John Doe\",\n  \"accountType\": \"PAYMENT\",\n  \"initialBalance\": 1500.00\n}"
            }
          },
          "response": [],
          "event": [{
            "listen": "test",
            "script": {
              "exec": [
                "pm.test(\"Status 201\", function() {",
                "    pm.response.to.have.status(201);",
                "});",
                "",
                "const body = pm.response.json();",
                "pm.test(\"AccountHolderName heeft voor- en achternaam\", function () {",
                "    pm.expect(body.accountHolderName.split(' ').length).to.be.greaterThan(1);",
                "});",
                "",
                "pm.test(\"Balance is string\", function () {",
                "    pm.expect(body.balance).to.be.a('string');",
                "});"
              ]
            }
          }]
        },
        {
